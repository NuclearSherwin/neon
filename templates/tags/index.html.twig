{% extends 'base.html.twig' %}

{% block title %} Tags {% endblock %}

{% block body %}

    {% if app.user %}
        <table class="table table-striped">
            <th scope="row"><a class="btn btn-primary" href="{{ path('create_tag') }}">Create</a></th>

            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">description</th>
                <th scope="col">Action</th>

            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>

                    <th scope="row">{{ tag.id }}</th>
                    <th scope="row">{{ tag.name }}</th>
                    <th scope="row">{{ tag.descriptions }}</th>
                    <th scope="row"><a class="btn btn-info" href="{{ path('detail_tag',{'id': tag.id}) }}">Detail</a>
                    </th>
                    <th scope="row"><a class="btn btn-warning" href="{{ path('tag_update',{'id': tag.id}) }}">Update</a>
                    </th>
                    <th scope="row"><a class="btn btn-danger " onclick="return confirm('are you sure to delete?')"
                                       href="{{ path('tag_delete',{'id': tag.id}) }}">Delete</a></th>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
