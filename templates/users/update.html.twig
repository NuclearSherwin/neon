{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'enter new name'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="category">Email:</label>
        {{ form_widget(form.email,{
            'attr':{
                'class':'form-control',
                'placeholder': 'enter new email'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="description">Password:</label>
        {{ form_widget(form.password,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Description'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="priority">Avatar:</label>
        {{ form_widget(form.profileImg,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="due_date">Birthday</label>
        {{ form_widget(form.birthday,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <input type="submit" name="update_user" value="Edit" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
