{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <div>
        {% if user is defined %}
            <section class="vh-100 position-relative mt-auto mb-auto" style="background-color: #eee;">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-md-12 col-xl-4">
                            <div class="card" style="border-radius: 15px;">
                                <div class="card-body text-center">
                                    <div class="mt-3 mb-4">
                                        <img src="{{ user.profileImg }}"
                                             class="rounded-circle img-fluid" style="width: 100px; overflow: hidden; height: 100px" />
                                    </div>
                                    <h4 class="mb-2">{{ user.name }}</h4>
                                    <p class="text-muted mb-4">{{ user.email }} <span class="mx-2">|</span> <a
                                                href="#!">{{ user.birthday|date('F j, Y') }}</a></p>
                                    <div class="mb-4 pb-2">
                                        <button type="button" class="btn btn-outline-primary btn-floating">
                                            <i class="fab fa-facebook-f fa-lg"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-primary btn-floating">
                                            <i class="fab fa-twitter fa-lg"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-primary btn-floating">
                                            <i class="fab fa-skype fa-lg"></i>
                                        </button>
                                    </div>
                                    <a class="btn btn-success" href="{{ path('app_logout') }}"
                                       onclick="return confirm('Are you sure to logout?');"><i class="fa-solid fa-arrow-right-from-bracket"></i>Log out
                                    </a>

                                    <a class="btn btn-warning" href="{{ path('update_user', {'id': user.id}) }}"><i class="fa-solid fa-pen-to-square"></i>Update</a>

                                    <a class="btn btn-danger" href="{{ path('delete_user', {'id': user.id}) }}"

                                        onclick="return confirm('Are you sure to delete your account')">
                                        <i class="fa-solid fa-trash"></i>
                                        Delete
                                    </a>
