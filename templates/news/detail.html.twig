{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="row gx-5">
            <div class="col-md-6 mb-4">
                <div class="bg-image hover-overlay ripple shadow-2-strong rounded-5" data-mdb-ripple-color="light">
                    <img src="{{ new.imgPath }}" class="img-fluid"/>
                    <a href="#!">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                    </a>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <span class="badge bg-danger px-2 py-1 shadow-1-strong mb-3">News of the day</span>
                <h4><strong>{{ new.title }}</strong></h4>
                <p class="text-muted">
                    {{ new.description }}
                </p>
                <p >
                    {{ new.tag.name }}
                </p>

                <a href="{{ path('news_delete', {'id': new.id}) }}"
                   onclick="return confirm('Are you sure to delete ?')"
                   class="btn btn-danger">Delete</a>
                <a href="{{ path('news_update', {'id': new.id}) }}" class="btn btn-warning">Update</a>
                <a href="{{ path('neon_news') }}" class="btn btn-success">Back to News</a>
            </div>
        </div>
    </div>
{% endblock %}
